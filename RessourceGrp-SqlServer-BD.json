{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serverName": {
      "type": "string",
      "defaultValue": "jiracloudsqlserver"
    },
    "administratorLogin": {
      "type": "string",
      "defaultValue": "JiraCloudServer"
    },
    "administratorLoginPassword": {
      "type": "securestring"
    },
    "location": {
      "type": "string",
      "defaultValue": "southafricanorth"
    },
    "databaseName": {
      "type": "string",
      "defaultValue": "JIRA_BD"
    },
    "vnetId": {
      "type": "string",
      "metadata": {
        "description": "ID du Virtual Network pour le Private Endpoint"
      }
    },
    "subnetName": {
      "type": "string",
      "metadata": {
        "description": "Nom du subnet dans le VNet"
      }
    },
    "alertEmail": {
      "type": "string",
      "defaultValue": "admin@example.com"
    }
  },
  "variables": {
    "privateEndpointName": "[concat(parameters('serverName'), '-privateEndpoint')]",
    "privateLinkServiceConnectionName": "sqlPrivateLinkServiceConnection"
  },
  "resources": [
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2024-05-01-preview",
      "name": "[parameters('serverName')]",
      "location": "[parameters('location')]",
      "properties": {
        "administratorLogin": "[parameters('administratorLogin')]",
        "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
        "version": "12.0",
        "minimalTlsVersion": "1.2",
        "publicNetworkAccess": "Enabled"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2024-05-01-preview",
      "name": "[concat(parameters('serverName'), '/', parameters('databaseName'))]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('serverName'))]"
      ],
      "sku": {
        "name": "GP_S_Gen5",
        "tier": "GeneralPurpose",
        "family": "Gen5",
        "capacity": 1
      },
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS"
      }
    },
    {
      "type": "Microsoft.Sql/servers/auditingSettings",
      "apiVersion": "2021-02-01-preview",
      "name": "[concat(parameters('serverName'), '/default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('serverName'))]"
      ],
      "properties": {
        "state": "Enabled",
        "isAzureMonitorTargetEnabled": true,
        "retentionDays": 30
      }
    },
    {
      "type": "Microsoft.Sql/servers/securityAlertPolicies",
      "apiVersion": "2021-02-01-preview",
      "name": "[concat(parameters('serverName'), '/default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('serverName'))]"
      ],
      "properties": {
        "state": "Enabled",
        "emailAccountAdmins": true,
        "emailAddresses": [
          "[parameters('alertEmail')]"
        ],
        "disabledAlerts": []
      }
    },
    {
      "type": "Microsoft.Network/privateEndpoints",
      "apiVersion": "2021-05-01",
      "name": "[variables('privateEndpointName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('serverName'))]"
      ],
      "properties": {
        "subnet": {
          "id": "[concat(parameters('vnetId'), '/subnets/', parameters('subnetName'))]"
        },
        "privateLinkServiceConnections": [
          {
            "name": "[variables('privateLinkServiceConnectionName')]",
            "properties": {
              "privateLinkServiceId": "[resourceId('Microsoft.Sql/servers', parameters('serverName'))]",
              "groupIds": [
                "sqlServer"
              ]
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "sqlServerName": {
      "type": "string",
      "value": "[parameters('serverName')]"
    },
    "sqlDatabaseName": {
      "type": "string",
      "value": "[parameters('databaseName')]"
    }
  }
}
