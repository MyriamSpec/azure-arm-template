{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dataFactoryName": {
      "type": "string",
      "defaultValue": "my-simple-adf"
    },
    "location": {
      "type": "string",
      "defaultValue": "eastus"
    }
  },
  "resources": [
    {
      "name": "[parameters('dataFactoryName')]",
      "type": "Microsoft.DataFactory/factories",
      "apiVersion": "2018-06-01",
      "location": "[parameters('location')]",
      "properties": {}
    },
    {
      "type": "Microsoft.DataFactory/factories/pipelines",
      "apiVersion": "2018-06-01",
      "name": "[concat(parameters('dataFactoryName'), '/MySimplePipeline')]",
      "dependsOn": [
        "[resourceId('Microsoft.DataFactory/factories', parameters('dataFactoryName'))]"
      ],
      "properties": {
        "activities": [
          {
            "name": "Wait1",
            "type": "Wait",
            "typeProperties": {
              "waitTimeInSeconds": 5
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.DataFactory/factories/triggers",
      "apiVersion": "2018-06-01",
      "name": "[concat(parameters('dataFactoryName'), '/MyScheduleTrigger')]",
      "dependsOn": [
        "[resourceId('Microsoft.DataFactory/factories/pipelines', parameters('dataFactoryName'), 'MySimplePipeline')]"
      ],
      "properties": {
        "runtimeState": "Started",
        "pipelines": [
          {
            "pipelineReference": {
              "referenceName": "MySimplePipeline",
              "type": "PipelineReference"
            },
            "parameters": {}
          }
        ],
        "type": "ScheduleTrigger",
        "typeProperties": {
          "recurrence": {
            "frequency": "Day",
            "interval": 1,
            "startTime": "2025-05-20T00:00:00Z",
            "timeZone": "UTC"
          }
        }
      }
    }
  ]
}
